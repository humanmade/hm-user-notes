<?xml version="1.0"?>
<ruleset name="HM User Notes">
	<description>Coding standards for HM User Notes plugin</description>

	<!-- What to scan -->
	<file>.</file>

	<!-- Exclude dependencies and build files -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>

	<!-- Use Human Made Coding Standards -->
	<rule ref="HM-Minimum" />

	<!-- Allow plugin file header to not have namespace -->
	<rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
		<exclude-pattern>hm-user-notes.php</exclude-pattern>
	</rule>
</ruleset>
